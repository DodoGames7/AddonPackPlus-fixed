{
	/* Comfy & Main File Imports Do Not Mess With */
	@import url(/*[[comfy]]*/);
	@import url(/*[[addon]]*/);
	@import url(/*[[comfyub]]*/);
	/* Extra - Can Be Modified in Quick Settings Do Not Mess With*/
	@import url(/*[[cub]]*/);
	@import url(/*[[url]]*/);
	@import url(/*[[cbg]]*/);
	@import url(/*[[nbup]]*/);
	@import url(/*[[tear]]*/);
	@import url(/*[[font]]*/);
	/* =====================================DO NOT MESS WITH===================================== */
	.theme-dark {
		--background-tertiary: /*[[bt]]*/;
		--background-secondary: /*[[bs]]*/;
		--background-secondary-alt: /*[[bsa]]*/;
		--background-primary: /*[[bp]]*/;
		--background-mobile-primary: /*[[bmp]]*/;
		--background-mobile-secondary: /*[[bmsec]]*/;
		--channeltextarea-background: /*[[ctab]]*/;
		--background-accent: /*[[ba]]*/;
		--background-message-hover: /*[[bmh]]*/;
		--background-modifier-hover: /*[[bmodh]]*/;
		--background-modifier-active: /*[[bma]]*/;
		--background-modifier-selected: /*[[bmsel]]*/;
		--deprecated-card-bg: /*[[dcbg]]*/;
		--background-floating: /*[[bf]]*/;
		--deprecated-quickswitcher-input-background: /*[[dqib]]*/;
		--elevation-low: /*[[el]]*/;
		--scrollbar-auto-thumb: /*[[sathumb]]*/;
		--scrollbar-auto-track: /*[[satrack]]*/;
		--scrollbar-thin-thumb: /*[[stt]]*/;
		--activity-card-background: /*[[acbg]]*/; }
	/* =====================================DO NOT MESS WITH===================================== */
	:root {
		/* Mention color */
		--mention-color: /*[[mc]]*/;
		/* Spotify plugin seek bar */
		--spotify-color: /*[[sp]]*/;
		/* Status color */
		--iddle: /*[[idd]]*/;
		--dnd: /*[[dnd]]*/;
		--offline: /*[[off]]*/;
		/* User button spacing */
		--user-buttons-spacing: /*[[ubs]]*/;
		--user-buttons-padding: /*[[ubp]]*/;
		/* Avatar position */
		--avatar-left: /*[[al]]*/;
		--avatar-bottom: /*[[ab]]*/;
		/* Avatar roundess */
		--avatar-radius: /*[[ar]]*/;
		/* Avatar width in modals */
		--avatar-width: /*[[aw]]*/;
		/* Status roundness */
		--status-radius: /*[[str]]*/;
		/* Server roundess */
		--server-radius: /*[[svr]]*/;
		/* Circles next to role names */
		--role-circle: /*[[rc]]*/;
		/* Colored emoji picker */
		--colored-emoji: grayscale(/*[[gs]]*/
		);
		/* Change the value to "100%" if you want the basic one */
		/* Tooltips */
		--tooltips: /*[[tt]]*/;
		/* Set it to "none" if you don't want it */
		/* Discord logo */
		--discord-logo: /*[[dll]]*/;
		/* Set it to "block"if you want it */
		/* =====================================DO NOT MESS WITH===================================== */
		/* Change bonfire in modals */
		--bonfire: url(/*[[bfi]]*/);
		/* Status color */
		--online: var(--mention-color);
		/* Chat buttons color */
		--chat-buttons: var(--mention-color);
		/* Mention color in chat */
		--mention-color-bar: var(--mention-color);
		--mention-color-background: var(--mention-color);
		--mention-color-hover: var(--mention-color)26;
		/* User settings color (Mute, Deafen and settings) */
		--user-buttons-color: var(--mention-color);
		/* Mention color */
		--unread-color: var(--mention-color);
		/* Wordmark+ */
		--textmark: /*[[tm]]*/;
		--lightfocused: /*[[lf]]*/;
		--lightnormal: /*[[ln]]*/;
		--darkfocused: /*[[df]]*/;
		--darknormal: /*[[dn]]*/; 
        /* CUSTOM */
        --csbg: url('/*[[csbg]]*/');}
	/* =====================================DO NOT MESS WITH===================================== */ }
